---
import MainLayout from '@layouts/MainLayout.astro';
import DesignCard from '@components/ui/DesignCard.astro';
import ProjectCard from '@components/ui/ProjectCard.astro';
---

<MainLayout>
  <div
    class='flex flex-col items-center gap-6 bg-peach-600 text-white px-6 md:px-40 py-24 bg-[url("/assets/mobile/bg-pattern-design-pages-intro-mobile.svg")] md:bg-[url("/assets/shared/bg-pattern-design-pages-intro.svg")] bg-right-top md:bg-center bg-no-repeat md:rounded-2xl'
  >
    <h1>App Design</h1>
    <p class='text-[0.9375rem] text-center'>
      Our mobile designs bring intuitive digital solutions to your customers
      right at their fingertips.
    </p>
  </div>
  <section class='px-6 md:px-0 mt-24 space-y-10'>
    <DesignCard
      image='/assets/shared/app-design/image-airfilter.jpg'
      title='Airfilter'
      description='Solving the problem of poor indoor air quality by filtering the air'
    />
    <DesignCard
      image='/assets/shared/app-design/image-eyecam.jpg'
      title='Eyecam'
      description='Product that lets you edit your favorite photos and videos at any time'
    />
    <DesignCard
      image='/assets/shared/app-design/image-faceit.jpg'
      title='Faceit'
      description='Get to meet your favorite internet superstar with the faceit app'
    />
    <DesignCard
      image='/assets/shared/app-design/image-todo.jpg'
      title='Todo'
      description='A todo app that features cloud sync with light and dark mode'
    />
    <DesignCard
      image='/assets/shared/app-design/image-loopstudios.jpg'
      title='Loopstudios'
      description='A VR experience app made for Loopstudios'
    />
  </section>
  <section class='flex flex-col gap-6 px-6 md:px-0 mt-24'>
    <div>
      <a href='/web-design'>
        <div
          class='flex flex-col items-center gap-3 uppercase text-white py-24 rounded-2xl bg-no-repeat bg-cover bg-center bg-[url("/assets/mobile/home/image-web-design.jpg")] md:bg-[url("/assets/tablet/home/image-web-design.jpg")] lg:bg-[url("/assets/desktop/home/image-web-design-large.jpg")] bg-blend-overlay bg-gray-800'
        >
          <h2>Web Design</h2>
          <div class='flex items-center gap-5 text-[0.9375rem] tracking-[5px]'>
            <span>View Projects</span>
            <img src='/assets/shared/icon-right-arrow.svg' alt='right arrow' />
          </div>
        </div>
      </a>
    </div>
    <div>
      <a href='/graphic-design'>
        <div
          class='flex flex-col items-center gap-3 uppercase text-white py-24 rounded-2xl bg-no-repeat bg-cover bg-center bg-[url("/assets/mobile/home/image-graphic-design.jpg")] md:bg-[url("/assets/tablet/home/image-graphic-design.jpg")] lg:bg-[url("/assets/desktop/home/image-graphic-design.jpg")] bg-blend-overlay bg-gray-800'
        >
          <h2>Graphic Design</h2>
          <div class='flex items-center gap-5 text-[0.9375rem] tracking-[5px]'>
            <span>View Projects</span>
            <img src='/assets/shared/icon-right-arrow.svg' alt='right arrow' />
          </div>
        </div>
      </a>
    </div>
  </section>
</MainLayout>
