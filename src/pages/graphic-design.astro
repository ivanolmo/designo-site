---
import MainLayout from '@layouts/MainLayout.astro';
import DesignCard from '@components/ui/DesignCard.astro';
import ProjectCard from '@components/ui/ProjectCard.astro';
---

<MainLayout>
  <div
    class='flex flex-col items-center gap-6 bg-peach-600 text-white px-6 md:px-40 lg:px-80 py-24 bg-[url("/assets/mobile/bg-pattern-design-pages-intro-mobile.svg")] md:bg-[url("/assets/shared/bg-pattern-design-pages-intro.svg")] bg-right-top md:bg-center bg-no-repeat md:rounded-2xl'
  >
    <h1>Graphic Design</h1>
    <p class='text-[0.9375rem] text-center'>
      We deliver eye-catching branding materials that are tailored to meet your
      business objectives.
    </p>
  </div>
  <section
    class='px-6 md:px-0 mt-24 space-y-10 lg:space-y-0 lg:grid lg:grid-cols-3 lg:gap-8'
  >
    <DesignCard
      image='/assets/shared/graphic-design/image-change.jpg'
      title='Tim Brown'
      description='A book cover designed for Tim Brown’s new release, ‘Change’'
    />
    <DesignCard
      image='/assets/shared/graphic-design/image-boxed-water.jpg'
      title='Boxed Water'
      description='A simple packaging concept made for Boxed Water'
    />
    <DesignCard
      image='/assets/shared/graphic-design/image-science.jpg'
      title='Science!'
      description='A poster made in collaboration with the Federal Art Project'
    />
  </section>
  <section class='flex flex-col lg:flex-row gap-6 px-6 md:px-0 mt-24'>
    <div class='relative group w-full'>
      <a href='/web-design'>
        <div
          class='grid grid-cols-1 place-items-center gap-y-4 uppercase text-white py-24 rounded-2xl bg-no-repeat bg-cover bg-center bg-[url("/assets/mobile/home/image-web-design.jpg")] md:bg-[url("/assets/tablet/home/image-web-design.jpg")] lg:bg-[url("/assets/desktop/home/image-web-design.jpg")]'
        >
          <div class='flex flex-col items-center gap-4 z-10'>
            <h2>Web Design</h2>
            <div
              class='flex items-center gap-5 text-[0.9375rem] tracking-[5px]'
            >
              <span>View Projects</span>
              <img src='/assets/shared/icon-right-arrow.svg' alt='right arrow'
              />
            </div>
          </div>
        </div>
        <div
          class='absolute inset-0 rounded-2xl bg-gray-800 opacity-70 group-hover:bg-peach-600 transition-colors duration-300'
        >
        </div>
      </a>
    </div>
    <div class='relative group w-full'>
      <a href='/app-design'>
        <div
          class='grid grid-cols-1 place-items-center gap-y-4 uppercase text-white py-24 rounded-2xl bg-no-repeat bg-cover bg-center bg-[url("/assets/mobile/home/image-app-design.jpg")] md:bg-[url("/assets/tablet/home/image-app-design.jpg")] lg:bg-[url("/assets/desktop/home/image-app-design.jpg")]'
        >
          <div class='flex flex-col items-center gap-4 z-10'>
            <h2>App Design</h2>
            <div
              class='flex items-center gap-5 text-[0.9375rem] tracking-[5px]'
            >
              <span>View Projects</span>
              <img src='/assets/shared/icon-right-arrow.svg' alt='right arrow'
              />
            </div>
          </div>
        </div>
        <div
          class='absolute inset-0 rounded-2xl bg-gray-800 opacity-70 group-hover:bg-peach-600 transition-colors duration-300'
        >
        </div>
      </a>
    </div>
  </section>
</MainLayout>
