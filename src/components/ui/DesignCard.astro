---
export interface Props {
  image: string;
  title: string;
  description: string;
}

const { image, title, description } = Astro.props as Props;
---

<div class='overflow-hidden rounded-2xl md:flex'>
  <div class='h-80 md:w-1/2'>
    <img src={image} alt={title} class='w-full h-full' />
  </div>
  <div
    class='flex flex-col justify-center items-center gap-4 px-8 md:px-14 bg-peach-100 md:w-1/2'
  >
    <h3 class='text-peach-600 uppercase'>{title}</h3>
    <p class='text-center'>{description}</p>
  </div>
</div>
