---
import Details from '@components/ui/Details.astro';
import GetInTouchCard from '@components/ui/GetInTouchCard.astro';
import { locationData } from '@data/locationData';
---

<footer>
  <div
    class={`px-6 md:px-10 py-16 bg-black ${
      Astro.url.pathname === '/contact' ? 'mt-28' : 'mt-80'
    }`}
  >
    {
      Astro.url.pathname !== '/contact' && (
        <div class='-mt-64'>
          <GetInTouchCard />
        </div>
      )
    }
    <div
      class='mt-16 border-b-2 border-gray-800 md:flex md:justify-between md:items-center md:pb-10'
    >
      <div class='flex justify-center items-center pb-8 md:p-0'>
        <a href='/'>
          <img src='/assets/shared/logo-light.png' alt='logo' class='!h-7' />
        </a>
      </div>
      <div class='hidden md:block'>
        <nav>
          <ul
            role='list'
            class='flex items-center gap-10 text-sm uppercase tracking-[2px] text-white'
          >
            <li>
              <a href='/about' class='hover:underline'>Our Company</a>
            </li>
            <li>
              <a href='/locations' class='hover:underline'>Locations</a>
            </li>
            <li>
              <a href='/contact' class='hover:underline'>Contact</a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
    <section class='flex flex-col items-center gap-10 mt-8'>
      <div
        class='flex flex-col items-center gap-8 text-white uppercase md:hidden'
      >
        <nav>
          <ul
            role='list'
            class='flex flex-col items-center gap-10 text-sm uppercase tracking-[2px]'
          >
            <li>
              <a href='/about' class='hover:underline'>Our Company</a>
            </li>
            <li>
              <a href='/locations' class='hover:underline'>Locations</a>
            </li>
            <li>
              <a href='/contact' class='hover:underline'>Contact</a>
            </li>
          </ul>
        </nav>
      </div>
      <div
        class='flex flex-col md:flex-row md:justify-between items-center gap-10 w-full'
      >
        <Details
          dark={false}
          rowOne={locationData[0]?.address.name}
          rowTwo={locationData[0]?.address.street}
          rowThree={locationData[0]?.address.city}
        />
        <Details
          dark={false}
          rowOne='Contact Us (Central Office)'
          rowTwo={locationData[0]?.contact.phone}
          rowThree={locationData[0]?.contact.email}
        />
        <div class='flex justify-center items-center md:place-self-end gap-4'>
          <a href='https://facebook.com' target='_blank'>
            <img src='/assets/shared/icon-facebook.svg' alt='facebook' />
          </a>
          <a href='https://youtube.com' target='_blank'>
            <img src='/assets/shared/icon-youtube.svg' alt='youtube' />
          </a>
          <a href='https://twitter.com' target='_blank'>
            <img src='/assets/shared/icon-twitter.svg' alt='twitter' />
          </a>
          <a href='https://pinterest.com' target='_blank'>
            <img src='/assets/shared/icon-pinterest.svg' alt='pinterest' />
          </a>
          <a href='https://instagram.com' target='_blank'>
            <img src='/assets/shared/icon-instagram.svg' alt='instagram' />
          </a>
        </div>
      </div>
    </section>
  </div>
</footer>
